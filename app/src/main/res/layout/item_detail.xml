<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/detailIcon"
        android:src="@drawable/ic_menu_slideshow"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/detailIcon"
        android:id="@+id/detailDesc"
        android:text="@string/placeholder_entry_description"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/detailIcon"
        android:layout_below="@id/detailDesc"
        android:id="@+id/detailEntry"
        android:textSize="20sp"
        android:text="@string/placeholder_entry"/>

</RelativeLayout>